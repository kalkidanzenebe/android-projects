<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/spinner_container_background"
        android:elevation="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_operation"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/operation_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:spinnerMode="dropdown"
            android:padding="8dp"
            android:background="@android:drawable/btn_dropdown"
            android:popupBackground="#FFFFFF"
            android:dropDownVerticalOffset="8dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="16dp">

    </LinearLayout>

    <include
        android:id="@+id/arithmetic_layout"
        layout="@layout/activity_arithmetic"
        android:visibility="gone" />


    <include
        android:id="@+id/trigonometric_layout"
        layout="@layout/activity_trigonometric"
        android:visibility="gone" />

</LinearLayout>
